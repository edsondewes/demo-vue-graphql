doctype html
html(lang="pt")
  head
    title Autenticação
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', rel='stylesheet')
    style.
      html {
        height: 100%;
      }
      body {
        background-attachment: fixed;
        background-image: linear-gradient(rgb(104, 145, 162), rgb(12, 97, 33));
        background-repeat: no-repeat;
        height: 100%;
        margin: 0;
        padding-top: 50px;
      }

      .btn-entrar {
        background-color: rgb(104, 145, 162);
        border: none;
        border-radius: 3px;
        font-size: 14px;
        font-weight: 700;
        height: 36px;
        margin-top: 20px;
        padding: 0px;
        transition: all 0.2s;
      }

      .btn-entrar:hover,
      .btn-entrar:active,
      .btn-entrar:focus {
        background-color: rgb(12, 97, 33);
      }

      .card-container {
        background-color: #f7f7f7;
        border-radius: 2px;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        margin: 0 auto 25px;
        padding: 40px 40px;
      }

      .form-container {
        max-width: 350px;
      }

      .form-container input {
        display: block;
        width: 100%;
      }

      .form-container .form-control {
        margin-bottom: 10px;
      }

      .form-container .form-control:focus {
        border-color: rgb(104, 145, 162);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgb(104, 145, 162);
        outline: 0;
      }

      .token-container {
        word-wrap: break-word;
      }

  body
    div(class="container-fluid")
      if token
        div(class="card-container token-container")
          h3 Usuário autenticado com sucesso
          strong Token: 
          span= token
      else
        form(method="post", class="card-container form-container")
          input(type="text", name="usuario", class="form-control", placeholder="Usuário", required)
          input(type="password", name="senha", class="form-control", placeholder="Senha", required)
          
          if erro
            div(class="alert alert-warning").
              Usuário ou senha inválidos

          input(type="submit", value="Entrar", class="btn btn-lg btn-primary btn-entrar")

          div(class="mt-3 alert alert-info")
            strong Usuários cadastrados
            div joao - Senha: 1234
            div maria - Senha: 1234